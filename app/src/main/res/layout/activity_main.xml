<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ioana.quiz.MainActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/background1" />


    <TextView
        style="@style/textQuiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/geography"
                style="@style/imageViewGeography"
                android:layout_width="@dimen/dimension200"
                android:layout_height="@dimen/dimension200" />


            <TextView
                android:id="@+id/textView"
                style="@style/textGeography"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension30" />

            <ImageView

                android:id="@+id/science"
                style="@style/imageViewScience"
                android:layout_width="@dimen/dimension200"
                android:layout_height="@dimen/dimension200" />


            <TextView
                style="@style/textScience"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimension30" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
