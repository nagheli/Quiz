<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ioana.quiz.Science">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/backgroundImage"
            android:scaleType="center"
            android:src="@mipmap/backgroundland" />

        <TextView
            android:id="@+id/category"
            style="@style/categoryView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/category4" />

        <TextView
            android:id="@+id/question"
            style="@style/questionView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/question1S" />

        <RadioGroup
            android:id="@+id/radioGroup"
            style="@style/radioGroup"
            android:layout_width="@dimen/dimension300"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/radioButton"
                style="@style/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answerS11" />

            <RadioButton
                android:id="@+id/radioButton2"
                style="@style/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answerS12" />

            <RadioButton
                android:id="@+id/radioButton3"
                style="@style/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answerS13" />


            <RadioButton
                android:id="@+id/radioButton4"
                style="@style/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answerS14" />


            <RadioButton
                android:id="@+id/radioButton5"
                style="@style/radioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answerS15" />
        </RadioGroup>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/score"
                style="@style/textViewScoreLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/scorePoints"
                style="@style/textViewScorePointsLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/next"
                style="@style/buttonThemeLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </RelativeLayout>

</ScrollView>
